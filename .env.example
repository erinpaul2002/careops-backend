# Backend Environment Variables
# Copy this file to .env and fill in the actual values

# Server Configuration
PORT=8000

# Database Configuration
DATABASE_URL=your_mongodb_connection_string_here

# Authentication
JWT_SECRET=your_jwt_secret_here

# File Storage (MinIO)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=careops-files
MINIO_REGION=us-east-1
MINIO_PRESIGNED_URL_TTL_SEC=900
MINIO_MAX_FILE_SIZE_MB=10

# Email Integration (Resend)
RESEND_API_KEY=your_resend_api_key_here

# AI Integration (Groq)
GROQ_API_KEY=your_groq_api_key_here
# Optional: override model
# GROQ_MODEL=llama-3.3-70b-versatile

# Google Calendar Integration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
# Optional: state signing secret (falls back to JWT_SECRET/GOOGLE_CLIENT_SECRET)
OAUTH_STATE_SECRET=your_oauth_state_signing_secret_here
# Optional: where backend callback redirects after OAuth success/error
INTEGRATIONS_OAUTH_REDIRECT_URL=http://localhost:3000/onboarding

# SMS Integration (Twilio - Optional)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
